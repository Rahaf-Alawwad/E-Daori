    .switch{
      position: absolute;
      top:15%;
      right:1%;
      transform: translate(-50%,-50%);
    }
    
    #toggle-btn-mode{
      background-color: white;
      width:60px;
      height:30px;
      border-radius: 30px;
      padding: 5px;
      transition: all 300ms ease-in-out;
    }

    #toggle-btn-mode > .slider-round{
      width: 20px;
      height: 20px;
      background-color: rgb(34, 34, 34);
      border-radius: 50%;
      transition: all 300ms ease-in-out;
    }
    #toggle-btn-mode.active{
      background-color: rgb(34, 34, 34);
    }
    #toggle-btn-mode.active > .slider-round{
      margin-left: 30px;
      background-color: white;
    }

    body.color{
      background-color: white;
    }

    * .colorBlack{
      color:black;
    }
  </style>

