<head>
    <link rel="stylesheet" href="css/auth.css">
    
   <style>
       body *{
           color:white;
       }
   </style>
</head>

<div class="card-edit-profile">
    <div class="content-edit-profile">

        <form action="/profile/edit" method= "POST" class="form" enctype="multipart/form-data" >
            <h2> Edit Your account</h2>
            <br>
        <input type="text" name="name" class="form__input__text" placeholder="Enter your name" value="<%= result.name %>">

        

        <input hidden="hidden" id ="profileImage" name="image" type="file" class="form__input__text" >

        <% result.favoriteTeams.forEach(team => { %>
    
           
                <div class="editfav">
                    <h6> <%= team.name %> </h6> 
                    <form action="/profile/edit/delete?id=<%result.id%>" method="POST">
                        <input  type="image" src="../../images/icons/del.png" class="form__input__submit">
                    </form>
                </div>
               
            
    
            <% }) %>
            <div>
            <input style="display: inline-block; width:440px;"type="password" value="<%= result.password %>" class="form__input__submit">
            <button style="background-color:transparent; outline: none; border:none; width: 30px;height: 30px; display:inline" onclick=" location.href = '/edit/Password' "><img style="width: 30px;height: 30px;" src="../../images/icons/edit.png">
            </button>
        </div>
            <form method="POST" action="/profile/edit">
           
            <input style="color:black" type="submit" value="Save changes" class="form__input__submit">
            

        </form>
    </div>

</div>
   

 
</div>