<div class="card-Change-password">
    <div class="content-Change-password">
        <form action="/edit/password" method="POST" class="form">
            <h2> Change password</h2>
            <br>
        <input type="password" name="password_old" class="form__input__text"  placeholder="Enter your old password">
        <br>

        <input type="password" name="password_new" class="form__input__text"  placeholder="Enter your new password">
        <br>

        <input type="password" name="password_varify" class="form__input__text"  placeholder="Re-enter your new password">
    <br>
        <input type="submit" value="Update password" class="form__input__submit">
        </form>
    </div>
    

    
</div>